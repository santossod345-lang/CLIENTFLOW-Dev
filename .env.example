# ============================================
# DATABASE CONFIGURATION
# ============================================
# Production: set DATABASE_URL (Railway/Heroku format)
DATABASE_URL=postgresql://user:password@localhost:5432/clientflow
DATABASE_ADMIN_PASSWORD=change_me_to_secure_password

# Development only: if DATABASE_URL and POSTGRES_HOST are not set,
# the app uses SQLite automatically. Override the path with:
# SQLITE_PATH=clientflow.db

# ============================================
# SECURITY & JWT
# ============================================
SECRET_KEY=your_secret_key_here_generate_with_secrets.py
ENVIRONMENT=development
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://seu-app.vercel.app
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=INFO

# ============================================
# REDIS (Optional)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# EXTERNAL SERVICES
# ============================================
OPENAI_API_KEY=sk-...
SENDGRID_API_KEY=

# ============================================
# PRODUCTION FEATURES
# ============================================
ENABLE_AI_ASSISTANT=true
ENABLE_BACKUP=true
BACKUP_FREQUENCY=daily
