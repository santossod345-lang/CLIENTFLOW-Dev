#################################################################
# Terraform backend example for AWS (S3 + DynamoDB locking)
# Copy this file to `backend.tf` inside the environment folder and
# replace the bucket/table names with your real resources.
#################################################################

terraform {
  backend "s3" {
    bucket         = "<YOUR_TF_STATE_BUCKET>"
    key            = "clientflow/${path_relative_to_include()}/terraform.tfstate"
    region         = "<AWS_REGION>"
    dynamodb_table = "<YOUR_TF_LOCK_TABLE>"
    encrypt        = true
  }
}
